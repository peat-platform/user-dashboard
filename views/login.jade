block head(lang='en')
    meta(charset='UTF-8')
    title Login/Register
    meta(name='viewport', content='width=device-width, initial-scale=1')
    script(src='https://code.jquery.com/jquery-1.11.1.js')
    // Latest compiled and minified CSS
    // <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    link(rel='stylesheet', href='../user/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', href='../user/stylesheets/openi_account.css')
    // Latest compiled and minified JavaScript
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js')

block body
    #loginModal
        .modal-header.hidden-xs
            // <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
            h3 PEAT Account
        .modal-body
            .well.container(style='max-width: 640px;')
                .acc
                    .acc_title
                        | This app stores your data on the PEAT platform. PEAT is a secure web service that aims to
                        | give you better control over your personal data.
                        a#findMorePeat(href='#')  Find out more about PEAT
                        br
                        br
                        | Please log in or register to continue.
                        br
                        br
                ul.nav.nav-tabs
                    if register
                        li
                            a(href='#create', data-toggle='tab') Login
                    else
                        li.active
                            a(href='#login', data-toggle='tab') Login
                    if register
                        li.active
                            a(href='#create', data-toggle='tab') Create Account
                    else
                        li
                            a(href='#create', data-toggle='tab') Create Account
                #myTabContent.tab-content
                        .container-fluid(style='background: #222222;padding: 20px; padding-top: 20px')
                            div
                                div(style='border-bottom: 1px solid #888;') Login
                            .col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2(style='margin-top: 25px')
                                #login-alert.alert.alert-danger.col-sm-12(style='display:none')



                                form.form-horizontal(id="loginForm", method="POST", action="/user/login", novalidate="novalidate", role='form', onsubmit="return onClickLogInButton()")
                                    .form-group(style='margin-bottom: 25px')
                                        .input-group
                                            span.input-group-addon
                                                i.glyphicon.glyphicon-user
                                            input#login-username.form-control(type='text', name='username', value='', placeholder='Username', required="", title="Please enter you username")
                                        span.help-block
                                    .form-group(style='margin-bottom: 25px')
                                        .input-group
                                            span.input-group-addon
                                                i.glyphicon.glyphicon-lock
                                            input#login-password.form-control(type='password', name='password', placeholder='Password', required="", title="Please enter your password")
                                        span.help-block
                                        div.errorMessage #{error}
                                    .checkbox
                                        label
                                            input(type="checkbox", name="remember", id="remember")
                                            span Remember login
                                        p.help-block (if this is a private computer)
                                    button(type="submit", class="btn btn-success btn-block") Login
                                    a(href="/user/forgot/", class="btn btn-default btn-block") Help to login


                    #create.tab-pane.fade
                        .container-fluid(style='background: #222222;padding: 20px; padding-top: 20px')
                            div
                                div(style='border-bottom: 1px solid #888;') Register
                            .col-md-8.col-md-offset-2.col-sm-8.col-sm-offset-2(style='margin-top: 25px')
                                form.form-horizontal(id="signupform",method="POST", action="/user/register", novalidate="novalidate", role='form' onsubmit="return onClickRegisterButton()")
                                    #signupalert.alert.alert-danger(style='display:none')
                                        p Error:
                                        span
                                    .form-group
                                        label.col-md-3.control-label(for='_openi_username') Username
                                        .col-md-9
                                            input#_openi_username.form-control(type='text', placeholder='Enter your Username', name="username", value="", required="", title="Please enter you username")
                                    .form-group
                                        label.col-md-3.control-label(for='_openi_passwd') Password
                                        .col-md-9
                                            input#_openi_passwd.form-control(type='password', placeholder='Enter your Password', name="password", value="", required="", title="Please enter your password")
                                    .form-group
                                        label.col-md-3.control-label(for='_openi_conf_passwd') Confirm Password
                                        .col-md-9
                                            input#_openi_conf_passwd.form-control(type='password', placeholder='Enter your Password')
                                        div.errorMessage #{error}
                                    .input-group(style='margin-bottom: 15px')
                                        .checkbox
                                            label
                                                input#accept-openi(type='checkbox', name='accept-openi', value='1')
                                                | Accept PEAT&apos;s Terms and Conditions and create my Personal Data Account.
                                    .form-group(style='border-top: 1px solid #999; padding-top:20px;margin-bottom: 0')
                                        .form-group
                                            // Button
                                            .col-md-offset-3.col-md-9
                                                button(type="submit", class="btn btn-success btn-block")
                                                    i.icon-hand-right
                                                    |  &nbsp; Sign Up
    button#alertBtn.btn.btn-primary.hidden(type='button', data-toggle='modal', data-target='.modal') Alert
    .modal.fade(tabindex='-1', role='dialog')
        .modal-dialog
            .modal-content
                .modal-header
                    button.close(type='button', data-dismiss='modal', aria-label='Close')
                        span(aria-hidden='true') &times;
                    h4.modal-title Alert
                .modal-body.custAlert
                    | :)
            // /.modal-content
        // /.modal-dialog
    // /.modal
    script(src='../user/javascripts/openi_user_account.js', type='text/javascript')
    script(src='../user/javascripts/app_perm.js', type='text/javascript')